<div>
  <div class="card">
    <div class="card-body">
      <div class="card-title">Message History</div>
      {{#each messages}}
      {{> message-list}}
      {{/each}}
    </div>
  </div>

  <div class="card-body">
    <form id="form-create-message-with-name">
      <div class="form-group">
        <label for="content"></label>
        <textarea class="form-control" id="content" rows="5"></textarea>
      </div>
      <button type="submit" class="btn btn-primary d-block w-25 mx-auto my-3">Reply</button>
    </form>
  </div>
</div>

<script src="/js/newMessage.js"></script>