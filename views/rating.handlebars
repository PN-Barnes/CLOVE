<ul class="nav nav-tabs" id="ratingTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="received-tab" data-bs-toggle="tab" data-bs-target="#received" type="button" role="tab" aria-controls="received" aria-selected="true">Received</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="posted-tab" data-bs-toggle="tab" data-bs-target="#posted" type="button" role="tab" aria-controls="posted" aria-selected="false">Posted</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="rate-tab" data-bs-toggle="tab" data-bs-target="#rate" type="button" role="tab" aria-controls="rate" aria-selected="false">Rate</button>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="received" role="tabpanel" aria-labelledby="received-tab">
    {{#each ratingReceived}}
      {{> rating-list}}
    {{/each}}
  </div>
  <div class="tab-pane fade" id="posted" role="tabpanel" aria-labelledby="posted-tab">
    {{#each ratingPosted}}
      {{> rating-list}}
    {{/each}}
  </div>
  <div class="tab-pane fade" id="rate" role="tabpanel" aria-labelledby="rate-tab">
      <div class="card">
        <div class="card-body">
            <div class="card-title mt-2 mb-5">
                <h2>Rate</h2>
            </div>
            <form id="form-create-rating-with-name">
                <div class="form-group my-3">
                    <label for="recipient">To:</label>
                    <input type="text" class="form-control" id="recipient">
                </div>
                {{!-- <div class="form-group my-3">
                    <label for="product">Product Name:</label>
                    <input type="text" class="form-control" id="product">
                </div> --}}
                <div class="form-group my-3">
                    <label for="product-select">Product Name:</label>
                    <select class="product form-control" id="product-select">
                      {{#each products}}
                        <option data-id="{{id}}">{{#if organic}}organic{{/if}} {{name}}</option>
                      {{/each}}
                    </select>
                </div>
                <div class="form-group my-3">
                    <label for="score-select">Rate your experience:</label>
                    <select class="form-control" id="score-select">
                        <option>*****</option>
                        <option>****</option>
                        <option>***</option>
                        <option>**</option>
                        <option>*</option>
                    </select>
                </div>
                <div class="form-group my-3">
                    <label for="content">Content</label>
                    <textarea class="form-control" id="content" rows="5"></textarea>
                </div>
                <button type="submit" class="btn mb-2 d-block w-25 mx-auto">Post</button>
            </form>
        </div>
    </div>
  </div>
</div>

<script src="/js/rating.js"></script>
