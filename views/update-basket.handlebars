<div class="card">
    <div class="card-body">
        <div class="card-title">
            <h2>Update basket</h2>
        </div>
        <form>
            <div class="form-group">
                <label for="product-name">product-name: {{baskets.[0].product.name}}</label>
            </div>
            <div class="form-group">
                <label for="stock">Stock:</label>
                <input type="text" class="form-control" id="stock" value="{{baskets.[0].stock}} lb">
            </div>
            <div class="form-group">
                <label for="price">Price:</label>
                <input type="text" class="form-control" id="price" value="{{baskets.[0].price}} /lb">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" id="description" rows="3">{{baskets.[0].description}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary mb-2" id="update-basket">Update</button>
            <button type="submit" class="btn btn-primary mb-2" id="delete-basket">Delete</button>
        </form>
    </div>
</div>
<script src="/js/updateBasket.js"></script>
