<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title my-3">
                    <h2>Sign Up</h2>
                </div>
                <form class="signup-form">
                    <div class="form-group my-3">
                        <label for="username-signup">Username:</label>
                        <input type="text" class="form-control" id="username-signup" />
                    </div>
                    <div class="form-group my-3">
                        <label for="password-signup">Password:</label>
                        <input type="password" class="form-control" id="password-signup" />
                        <small id="passwordHelp" class="form-text text-muted">Should be at least 6 characters</small>
                    </div>
                    <div class="form-group my-3">
                        <label for="zipcode-signup">Zip Code:</label>
                        <input type="text" class="form-control" id="zipcode-signup" />
                        <small id="zipcodeHelp" class="form-text text-muted">Should be 5 digit without space</small>
                    </div>
                    <div class="form-group my-3">
                        <button class="btn  d-block w-100 mt-2" type="submit">Sign Up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/signup.js"></script>